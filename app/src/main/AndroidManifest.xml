<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.orient33.demo.videodemo" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoViewActivity"
            android:label="@string/title_activity_video_view"
            android:theme="@style/AppTheme.FullScreen" >
        </activity>
        <activity
            android:name=".SurfaceViewActivity"
            android:label="@string/title_activity_surface_view" >
        </activity>
        <activity
            android:name=".TextureViewActivity"
            android:label="@string/title_activity_texture_view" >
        </activity>

        <service
            android:name=".FloatService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
